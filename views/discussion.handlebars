    <script>
        function Main_reply(){
            var x = document.getElementById('submitForm');
            x.style.display = 'block';
            var y = document.getElementById('formHeader');
            y.innerHTML = "Main Reply Editor";
        }
        function Sub_reply(main_post_id){
            var x = document.getElementById('submitForm');
            x.style.display = 'block';
            var y = document.getElementById('formHeader');
            y.innerHTML = "Make a comment to a post";
            document.getElementById("submitFormT").elements.namedItem("main_post_id").value
                    = main_post_id;
        }
        function prompt_createPost_error(){
            alert("You need to log in first!");
        }
        function rating(main_post_id,rate){
            var x = document.getElementById('submitFormT');
            x.action = "#/rating";
            document.getElementById("submitFormT").elements.namedItem("main_post_id").value 
                 = main_post_id;

            document.getElementById("submitFormT").elements.namedItem("rating").value
                 = rate;
            x.submit();
        }
        function deletePost(main_post_id) {
            var x = document.getElementById('submitFormT');
            x.action = "#/delete"; 
            document.getElementById("submitFormT").elements.namedItem("main_post_id").value 
                 = main_post_id;
            x.submit();
        }
        function editPost(main_post_id) {
            var x = document.getElementById('submitForm');
            x.style.display = 'block';
            var y = document.getElementById('formHeader');
            y.action = "#/edit";
            y.innerHTML = "re editting the post";
            //document.getElementById("main_inform").innerHTML;
            document.getElementById("submitFormT").elements.namedItem("main_post_id").value
                    = main_post_id;
    }
    </script>
