  <script>
  function initMap() {
  var location = {lat: 40.425869, lng: -86.908066};
  
  var map = new google.maps.Map(document.getElementById('map'), {center: location,
    scrollwheel: false,
    zoom: 14
  });

  var marker = new google.maps.Marker({
    position: location,
    map: map
  });
}
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDbxldcXVnEQ630ubdPK_gcNFvAfeJ9U14&callback=initMap" ></script>
