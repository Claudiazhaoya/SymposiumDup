    <div class="cd-user-modal-container"> <!-- this is the container wrapper -->
      <div > <!-- Contact form -->
        <p>DROP US A LINE</p>
        <form class="cd-form" method="post" action="contact/send">
          <p class="fieldset">
            <label>Name</label>
            <input type="text" placeholder="Name" name="name">
            <span class="cd-error-message">Username error message</span>
          </p>

          <p class="fieldset">
            <label>Email</label>
            <input type="email"  placeholder="Enter Email" name="email">
            <span class="cd-error-message">Error message here!</span>
          </p>

           <p class="fieldset">
            <label>Message</label>

            <textarea type="input" placeholder="Enter Message" name="message" rows=8></textarea> 
            <span class="cd-error-message">Error message here!</span>
          </p>

          <p class="fieldset">
            <input class="full-width" type="submit" value="SEND MESSAGE">
          </p>
        </form>
