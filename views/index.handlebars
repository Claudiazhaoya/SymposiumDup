<body>
  <header role="banner">
    <!-- <div id="cd-logo"><a href="#0"><img src="img/nav-logo-6.png" alt="Logo"></a></div> -->
    <div id="cd-logo"> 
      <h1> Symposium </h1>
    </div>
    <nav class="main-nav">
      <ul>
        <!-- inser more links here -->
        {{#if user}}
          <li role="presentation"><a class="cd-signin" href="/users/profile">Profile</a></li>
          <li role="presentation"><a class="cd-signin" href="/users/logout">Logout</a></li>
        {{else}}
          <li role="presentation"><a class="cd-signin" href="/users/login">Login</a></li>
          <li role="presentation"><a class="cd-signup" href="/users/signup">Signup</a></li>
        {{/if}}

      </ul>
    </nav>
