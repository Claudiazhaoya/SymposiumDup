<!doctype html>
<html lang="en" class="no-js">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/stylesheets_wjz/bootstrap.min.css"/>
  <link rel="stylesheet" href="/stylesheets/signup.css"/>
  
  <script src="javascripts/modernizr.js"></script> <!-- Modernizr -->
  <title>Symposium</title>
</head>

<div class="row">
        <div class="col-lg-12">
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          
          {{{body}}}
        </div>

        
      </div>


<body>
    <!--NAVBAR SECTION START -->

    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">

        <div class="dropdown">
        <button class="navbar-toggler navbar-toggler-right dropbtn" type="button" data-toggle="collapse" data-target="#navbar-collapse-1" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbar-collapse-1" class="dropdown-content">
            <ul class="nav navbar-nav navbar-right" >
                <!--
                <a href="#home">Home</a> -->
                {{#if user}}
                    <a href="/users/profile">Profile</a>
                    <a href="/users/logout">Log Out</a>
                {{else}}
                    <a href="/users/signup">Sign Up</a>
                    <a href="/users/login">Log In</a>
                {{/if}}
                <!--
                <a href="#course-sec">Course</a>
                <a href="#contact-sec">Contact</a>
                -->
            </ul>
        </div>
        </div>


        <a class="navbar-brand" href="/">Symposium</a>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav ml-auto">
                <!--
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li> -->
                {{#if user}}
                    <li class="nav-item active">
                        <a class="nav-link" href="/users/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/logout">Log Out</a>
                    </li>
                {{else}}
                    <li class="nav-item active">
                        <a class="nav-link" href="/users/signup">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/login">Log In</a>
                    </li>
                {{/if}}
                <!--
                <li class="nav-item">
                    <a class="nav-link" href="#">Course</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
                -->
            </ul>
        </div>
    </nav>
    <!-- END NAV BAR -->

    {{#if errors}}
          {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
          {{/each}}
    {{/if}}

    <div class="cd-user-modal-container"> <!-- this is the container wrapper -->
      <div id="cd-login"> <!-- log in form -->
        <form class="cd-form" method="post" action="/users/login">
          <p class="fieldset">
            <label class="image-replace cd-username" for="signup-username">Username</label>
            <input class="full-width has-padding has-border" id="signup-username" type="text" placeholder="Username" name="username">
            <span class="cd-error-message">Username error message</span>
          </p>

          <p class="fieldset">
            <label class="image-replace cd-password" for="signin-password">Password</label>
            <input class="full-width has-padding has-border" id="signin-password" type="password"  placeholder="Password" name="password">
            <span class="cd-error-message">Error message here!</span>
          </p>

          <p class="fieldset">
            <input type="checkbox" id="remember-me" checked>
            <label for="remember-me">Remember me</label>
          </p>

          <p class="fieldset">
            <input class="full-width" type="submit" value="Login">
          </p>
        </form>
        <!-- <a href="#0" class="cd-close-form">Close</a> -->
      </div> <!-- cd-login -->
    </div>

  <div class="footer">
    <p>&copy; 2017 Symposium, Inc.</p>
  </div>

</body>
</html>