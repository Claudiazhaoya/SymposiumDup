<!doctype html>
<html lang="en" class="no-js">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/stylesheets_wjz/bootstrap.min.css"/>
  <link rel="stylesheet" href="/stylesheets/signup.css"/>
  
  <script src="javascripts/modernizr.js"></script> <!-- Modernizr -->
  <title>Symposium</title>
</head>

<div class="row">
        <div class="col-lg-12">
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          
          {{{body}}}
        </div>   
</div>


<body>
    <!--NAVBAR SECTION START -->

    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">

        <div class="dropdown">
        <button class="navbar-toggler navbar-toggler-right dropbtn" type="button" data-toggle="collapse" data-target="#navbar-collapse-1" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbar-colla   ntent">
            <ul class="nav navbar-nav navbar-right" >
                <!--
                <a href="#home">Home</a> -->
                {{#if user}}
                    <a href="/users/profile">Profile</a>
                    <a href="/users/logout">Log Out</a>
                {{else}}
                    <a href="/users/signup">Sign Up</a>
                    <a href="/users/login">Log In</a>
                {{/if}}
                <!--
                <a href="#course-sec">Course</a>
                <a href="#contact-sec">Contact</a>
                -->
            </ul>
        </div>
        </div>


    </nav>
    <!-- END NAV BAR -->


    <div class="cd-user-modal-container"> <!-- this is the container wrapper -->
      <div id="cd-login"> <!-- log in form -->
        <form class="cd-form" method="post" action="/users/reset">
          <p class="fieldset">
            <label class="image-replace cd-username" for="password">New Password</label>
            <input class="full-width has-padding has-border" id="newPassword" type="password" placeholder="New password" name="password" autofocus=true>
            <span class="cd-error-message">Error message</span>
          </p>

          <p class="fieldset">
            <label class="image-replace cd-password" for="confirm">Confirm Password</label>
            <input class="full-width has-padding has-border" id="signin-password" type="password"  placeholder="Confirm password" name="confirm">
            <span class="cd-error-message">Error message here!</span>
          </p>


          <p class="fieldset">
            <input class="full-width" type="submit" value="Update Password">
          </p>
        </form>
        <!-- <a href="#0" class="cd-close-form">Close</a> -->
      </div> <!-- cd-login -->
    </div>

  <div class="footer">
    <p>&copy; 2017 Symposium, Inc.</p>
  </div>

</body>
</html>